html
    head
        link(href='css/style.css', rel='stylesheet', type='text/css')
    body
        h1='Welcome to the admin page!'
        table
            caption="Users in database"
            tr(style='width:100%')
                th='Fullname'
                th='Username'
                th='Email'
                th='Role'
                th='Age'
                th='Status'
            for user in users
                tr
                    td=user.fullname
                    td=user.username
                    td=user.email
                    if user.role == 'admin'
                        if user._id == adminId
                            td=user.role + "(You)"
                        else 
                            td=user.role
                                a(href="/admin/" + user._id)='   Demote'
                    else
                        td=user.role
                            a(href="/admin/" + user._id)='   Promote'
                    td=user.age
                    td=user.status
                        if(user.status == 'Active')
                            a(href="/admin/" + user._id + "/Suspended" )= '   Suspend'
                        else
                            a(href="/admin/" + user._id + "/Active")= '   Activate'

//- Suspended accounts should not be able to login and should get a message when they try (or redirect to another page)